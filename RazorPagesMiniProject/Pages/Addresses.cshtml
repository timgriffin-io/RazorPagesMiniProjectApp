@page
@model RazorPagesMiniProject.Pages.AddressesModel
@{
    ViewData["Title"] = "Addresses";
}

<h1>Addresses</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Address.StreetAddress"></label>
        <input asp-for="Address.StreetAddress" type="text" placeholder="Street Address" />
    </div>
    <div class="form-group">
        <label asp-for="Address.City"></label>
        <input asp-for="Address.City" type="text" placeholder="City" />
    </div>
    <div class="form-group">
        <label asp-for="Address.State"></label>
        <input asp-for="Address.State" type="text" placeholder="State" />
    </div>
    <div class="form-group">
        <label asp-for="Address.ZipCode"></label>
        <input asp-for="Address.ZipCode" type="text" placeholder="ZipCode" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
